@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid h100 d-flex flex-column align-items-center justify-content-center">
    <div class="row w-100 m-0 p-0">
    <div class="col-md-6">
        <section>
            <form id="account" method="post">
                <h2>Faça seu login</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating text-dark my-2">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating text-dark my-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox my-2">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg bg-dracula-dark text-light">Entrar</button>
                </div>
                <div class="mt-4">
                    <p>
                        Esqueceu sua senha?
                        <a id="forgot-password" asp-page="./ForgotPassword">Criar nova!</a>
                    </p>
                    <p>
                        Não tem uma conta? 
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registre-se!</a>
                    </p>
                    @*<p>
                        Reenviar email de confirmação
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar!</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
    <div class="d-none d-md-block col-md-6 text-center">
        <h1 class="font-righteous">AnimeFlix</h1>
        <img src="~/assets/icon.png" class="img-fluid" style="max-width: 250px" />
    </div>
</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
