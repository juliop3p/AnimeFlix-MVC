@using Microsoft.AspNetCore.Identity
@using AnimeFlix.App.Identity
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="d-flex align-items-center justify-content-center mx-4 cursor-pointer dropdown">
            <i data-feather="heart" class="feather-32 tc-primary cursor-pointer dropdown-toggle" id="dropdownFavorites"
            data-bs-toggle="dropdown" aria-expanded="false"></i>
            <div class="dropdown-menu dropdown-menu-lg-end dropdown-favorites dropdown-menu-dark"
            aria-labelledby="dropdownFavorites">
                <div class="container-dropdown d-flex align-items-center justify-content-center">
                    <i data-feather="check-circle" class="feather-32 tc-primary"></i>
                    <h3 class="tc-primary">Em breve!</h3>
                </div>
            </div>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link text-dark" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown"
            aria-expanded="false">
                <img class="user-image" src="~/images/naruto.png" /></a>

            <ul class="user-dropdown dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                <li><a class="dropdown-item nav-link btn btn-link text-white" asp-area="Identity"
                    asp-page="/Account/Manage/Index" title="Manage"><button type="submit"
                        class="nav-link btn btn-link text-white w-100">Minha Conta</button></a></li>
                <li><a class="dropdown-item" href="#">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index",
            "Home", new { area = "" })">
                            <button type="submit" class="nav-link btn btn-link text-white w-100">Logout</button>
                        </form>
                    </a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a class="dropdown-item nav-link btn btn-link text-white" asp-controller="Anime"
                    asp-action="Index"><button type="submit"
                        class="nav-link btn btn-link text-white w-100">Dashboard</button></a>
                    </li>

                }
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item mx-3">
            <div class="d-flex align-items-center justify-content-center">
                <i class="fa fa-user tc-primary mx-1"></i>
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white btn-register" asp-area="Identity" asp-page="/Account/Register">Criar Conta</a>
        </li>
    }
</ul>
