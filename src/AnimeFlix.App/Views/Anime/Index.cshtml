@model IEnumerable<AnimeFlix.App.Models.AnimeViewModel>;

@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex flex-row justify-content-between align-items-center">
    <h3>Dashboard</h3>
    <a class="btn btn-primary" asp-area="" asp-controller="Anime" asp-action="Create">Create Anime</a>
</div>


<hr class="mb-5" />

<div class="row">
    @foreach (var anime in Model)
    {
        <div class="card border-dark mb-4" style="width: 14rem; margin: 0px 8px; padding: 0px;">
            <img src="@anime.Image" class="card-img-top" alt="@anime.Name">
            <div class="card-body bgc-dark">
                <h5 class="card-title lead">@anime.Name</h5>

                <hr />

                <a asp-controller="Anime" asp-action="Edit" asp-route-id="@anime.Id" class="btn btn-warning">Edit</a>
                <a asp-controller="Anime" asp-action="Delete" asp-route-id="@anime.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }

</div>